<% layout("/layouts/boilerplate") -%>

<div class="row">
    <body>
    <div class="col-8 offset-3 mt-3">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 listing-card">
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image">
  <div class="card-body">
    <p  class="card-text mt-2">Owned by - <i><%= listing.owner.username %></i></p>
    <p class="card-text mt-2">
        <%= listing.description %> <br />
         &#8377;<%= new Intl.NumberFormat('en-IN').format(listing.price) %> <br /> 
         <%= listing.location %> <br />
        <%= listing.country %> <br />
    </p>
  </div>
</div>
<% if(currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="btns">
   <a class="edit-link offset-3 mb-4" href="/listings/<%= listing._id%>/edit">
        <button class="btn btn-dark ed-btn edit-btn ">EDIT</button>
    </a>
    <br />
    <form method="POST" action="/listings/<%= listing._id%>/?_method=DELETE" class="del-link offset-1">
        <button class="btn btn-dark mb-3">DELETE</button>
    </form>
</div>
<% } %>

<div class="col-8 offset-3 mt-3">
    <% if(currUser) { %>
<h4> Leave a review </h4>
<form method="POST" action="/listings/<%= listing._id%>/reviews" novalidate class="needs-validation">
    
<div class="mt-3">
   <label for="rating" class="form-lable">Rating</label>
  <fieldset class="starability-fade mt-3">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
</div>
    <div class="mt-3">
        <label for="comment" class="form-lable mb-3">Comments</label>
        <textarea rows="5" cols="30" name="review[comment]" id="comment" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter some comment</div>
    </div>
    <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
</form>
<% } %>
<hr />

<% if(listing.reviews.length > 0) { %>
<div class="row">
<p><b>Reviews</b></p>
<% for (review of listing.reviews) { %>
 <div class="card col-5 mt-2 ms-3 mb-3">
    <div class="card-body">
        <h5 class="card-title">@<%= review.author.username %></h5>
        <p class="starability-result card-text" data-rating= <%= review.rating %> ></p>
        <p class="card-text"> <%= review.comment %></p>
        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>/?_method=DELETE">
            <button class="btn btn-sm btn-dark">DELETE</button>
        </form>
    </div>
 </div>
<% } %>
</div>
<% } %>
</div>
</body>
<div class="col-8 offset-3 mt-3">
    <p><b>Where you will be!</b></p><br />
    <iframe width="500" height="300" allow="geolocation" 
    src="https://api.maptiler.com/maps/019b807f-df83-7b06-9229-72f860d201a2/?key=z1pjTNd0LLu4xw1RUC47#11.74/<%= listing.geometry.coordinates[1] %>/<%= listing.geometry.coordinates[0] %>">
</iframe>
</div>

</div>
