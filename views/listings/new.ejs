<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" placeholder="input title" class="form-control" required>
        <div class="valid-feedback">Title looks good</div>
        </div>
        
        <br />

        <div>
        <lable for="description" class="form-lable">Description</lable> 
        <textarea name="listing[description]" placeholder="type description" class="form-control" required></textarea>
        <div class="invalid-feedback">Enter short description</div>
        </div>
        

        <div class="mt-3">
           <lable for="image" class="form-lable">Upload listing Image</lable> 
           <input name="listing[image]" type="file" class="form-control"></input>

        </div>
        
        <br />

        <div class="row">
        <div class="col-md-4">
            <lable for="price" class="form-lable" >Price</lable>
            <input name="listing[price]" type="number" placeholder="input price" class="form-control" required>
            <div class="invalid-feedback">Enter Valid price</div>
        </div>
        
        <br />

        <div class="col-md-8">
            <lable for="location" class="form-lable">Location</lable>
            <input name="listing[location]" placeholder="input location" class="form-control" required>
            <div class="invalid-feedback">Enter correct location</div>
        </div>
        </div>
        
        <br />

        <div>
            <lable for="country" class="form-lable">Country</lable>
            <input name="listing[country]" placeholder="input country" class="form-control" required>
            <div class="invalid-feedback">country name should be valid</div>
        </div>
        </div>
        </div>
        
        <br /><br />
        
        <button class="btn btn-dark offset-2 add-btn">ADD</button>
        <br /><br />
    </form>
</body>
