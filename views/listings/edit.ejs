<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
               <h3>Edit listing</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div>
            <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" value="<%=listing.title%>" class="form-control" required>
        <div class="valid-feedback">Title looks good</div>
        </div>
        <br />
        <div>
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" class="form-control" required><%=listing.description%> </textarea>
            <div class="invalid-feedback">Enter short description</div>
        </div>
        <br />
        <div>
            Original Image<br/>
            <img src="<%= OriginalImageUrl %>"/>
        </div>
        <div>
        <lable for="image" class="form-lable" >Upload New Image</lable>
        <input name="listing[image]" type="file" class="form-control"></input>
        <div class="invalid-feedback">link must be valid</div>
        </div>
        <br />
        <div>
            <lable for="price" class="form-lable">Price</lable>
        <input name="listing[price]" type="number" value="<%=listing.price%>" class="form-control" required>
         <div class="invalid-feedback">Enter Valid price</div>
        </div>
        <br />
        <div>
            <lable for="location" class="form-lable">Location</lable>
        <input name="listing[location]" value="<%=listing.location%>" class="form-control" required>
        <div class="invalid-feedback">Enter correct location</div>
        </div>
        <br />
        <div>
            <lable for="country" class="form-lable">Country</lable>
        <input name="listing[country]" value="<%=listing.country%>" class="form-control" required>
        <div class="invalid-feedback">country name should be valid</div>
        </div>
        </div>
    </div>
   
        <br />
        <br />
        <button class="btn btn-dark edit-btn offset-2 mb-3">Submit</button>
    </form>
    
</body>
