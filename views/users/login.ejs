<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-8 offset-2">Login on Wanderlust</h1>
    <div class="col-8 offset-2">
     <form method="POST" action="/login" novalidate class="needs-validation">
        <div>
          <lable for="username" class="form-lable">Username</lable>
          <input name="username" id="username" type="text" class="form-control" required>
       </div>

       <div>
          <lable for="password" class="form-lable">password</lable>
          <input name="password" id="password" type="password" class="form-control" required>
       </div>

       <button class="btn btn-success mt-3">Login</button>
     </form>
    </div> 
</div>