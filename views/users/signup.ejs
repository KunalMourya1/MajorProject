<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-8 offset-2">SignUp on Wanderlust</h1>
    <div class="col-8 offset-2">
     <form method="POST" action="/signup" novalidate class="needs-validation">
        <div>
          <lable for="username" class="form-lable">Username</lable>
          <input name="username" id="username" type="text" class="form-control" required>
          <div class="valid-feedback">looks good</div>
       </div>

       <div>
          <lable for="email" class="form-lable">email</lable>
          <input name="email" id="email" type="email" class="form-control" required>
       </div>

       <div>
          <lable for="password" class="form-lable">password</lable>
          <input name="password" id="password" type="password" class="form-control" required>
          <div class="valid-feedback">looks good</div>
       </div>

       <button class="btn btn-success mt-3">SignUp</button>
     </form>
    </div> 
</div>
        